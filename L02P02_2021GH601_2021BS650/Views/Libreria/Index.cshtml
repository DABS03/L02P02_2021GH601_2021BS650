@using (Html.BeginForm("CrearLibro", "Libreria", FormMethod.Post))
{
    <div class="text-center">
        <nav class="navbar navbar-dark bg-primary ">
            <div>
                <div class="card-body justify-content-center">
                    <img src="640px-UNICAES_Logo.png">
                    <h5 class="fw-bold" style="font-size: 15px; color: white">Creación de Libros</h5>
                </div>
            </div>
        </nav>
    </div>
    <div class="form-group row mb-4">
        <div class="row mt-3">
            <div class="col-sm-2">
                <label>
                    Nombre
                </label>
            </div>
            <div class="col-sm-4">
                @Html.TextBox("nombre", "", new { @class = "form-control" })
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-sm-2">
                @Html.Label("lblDescripcion", "Descripción")
            </div>
            <div class="col-sm-4">
                @Html.TextArea("descripcion", "", new { @class = "form-control", @placeHolder = "Ingrese la descripción" })
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-sm-2">
                <label>
                    Precio
                </label>
            </div>
            <div class="col-sm-2">
                @Html.TextBox("precio", "", new { @class = "form-control" })
            </div>
            <div class="col-sm-2">
                <label>
                    Autor
                </label>
            </div>
            <div class="col-sm-2">
                @Html.DropDownList("id_autor", ViewData["listadodeautores"] as SelectList, "Seleccione un Autor", new { @class = "form-control" })
            </div>
            <div class="col-sm-2">
                <label>
                    Categoria o Genero
                </label>
            </div>
            <div class="col-sm-2">
                @Html.DropDownList("id_categoria", ViewData["listadodecategoria"] as SelectList, "Seleccione la categoria", new { @class = "form-control" })
            </div>
        </div>
    </div>
    <div class="form-group row mb-4">
        <div class="col-sm-2"></div>
        <div class="col-sm-4" style="margin-top: 20px;">
            <input type="submit" class="btn-primary" value="Guardar" />
        </div>
    </div>
    <table class="table table-sm">
        <thead>
            <tr class="text-md-center">
                <th>Nombre del Libro</th>
                <th>Descripción</th>
                <th>Precio</th>
                <th>Autor</th>
                <th>Categoria</th>
                <th>Eliminar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var libro in (IEnumerable<dynamic>)ViewData["listLibros"])
            {
                <tr>
                    <td>@libro.nombre</td>
                    <td>@libro.descripcion</td>
                    <td>@libro.precio</td>
                    <td>@libro.id_autor</td>
                    <td>@libro.id_categoria</td>
                    <td>
                        <form asp-controller="Libreria" asp-action="EliminarLibro" method="post">
                            <input type="hidden" name="id" value="@libro.id" />
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <footer>
        <div class="navbar navbar-dark bg-primary ">
            <tr>
                <td>
                    <a class="" style="color: white;">2021-GH-601 - Fernando Ulises Gómez Herrera</a>
                </td>
                <td>
                    <a class="text-center" style="color: white;">2021-BS-650 - Diego Alejandro Burgos Servellón</a>
                </td>
            </tr>
        </div>
    </footer>
}
